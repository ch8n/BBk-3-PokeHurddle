<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_explore"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginBottom="250dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/explore" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/label_explore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/poppins_regular"
        android:text="Explore"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img_explore" />


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_bag"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="200dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/backpack" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/label_bag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/poppins_regular"
        android:text="Items"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@id/img_bag"
        app:layout_constraintStart_toStartOf="@id/img_bag"
        app:layout_constraintTop_toBottomOf="@id/img_bag" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_pokemon"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="200dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/pokemons" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/label_pokemon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/poppins_regular"
        android:text="Pokemon"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@id/img_pokemon"
        app:layout_constraintStart_toStartOf="@id/img_pokemon"
        app:layout_constraintTop_toBottomOf="@id/img_pokemon" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_pokecenter"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="200dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/pokecenter" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/label_pokecenter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/poppins_regular"
        android:text="Recover"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@id/img_pokecenter"
        app:layout_constraintStart_toStartOf="@id/img_pokecenter"
        app:layout_constraintTop_toBottomOf="@id/img_pokecenter" />


</androidx.constraintlayout.widget.ConstraintLayout>